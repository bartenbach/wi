#============
# Debug mode
#============
#set -x

#===========
# Arguments
#===========
args=$#
arg1=$1
arg2=$2

#==================
# Script Variables
#==================
version='0.0.2-indev'
wi_home=$XDG_CONFIG_HOME/wi
wi_conf=$wi_home/wi.conf
usage='Usage:'
usage_arguments='wi [connection-arguments] [--version] [-h,--help] [-d {interface},--disconnect {interface}]'
usage_wireless_dhcp_connection='wireless dhcp connection: wi [interface] [essid]'
usage_wireless_scanning='wireless network scanning: wi scan [interface]'
iface=""
essid=""
green='\e[0;32m'
red='\e[0;31m'

#==================
# Exit error codes
#==================
not_root=10
no_arguments=20
no_connection=30
cannot_put_interface_down=40
cannot_associate_with_essid=50
cannot_put_interface_up=60

#===========
# Functions
#===========
function ensure_root {
  if [ $EUID != 0 ];then
    echo -e "${red}You must be root to manage network interfaces"
    exit $not_root
  fi
}

#========================
# Command line arguments
#========================
function ensure_arguments {
  if [ "$arg1" == "--version" ];then
    echo "wi version $version"
    exit 0
  elif [ "$arg1" == "scan" ];then
    iface=$arg2
    echo "[Scanning for networks with $iface]"
    scan
    check_scan
  elif [ $args -lt 2 ];then
    echo "$usage $usage_arguments"
    echo "    $usage_wireless_dhcp_connection"
    echo "    $usage_wireless_scanning "
    exit $no_arguments
  else
    iface=$arg1
    essid=$arg2
  fi  
}

#=================
# Connection code
#=================
function put_interface_down {
  ip link set $iface down >/dev/null 2>&1
}

function check_exit {
  if [ $? != 0 ];then
    echo -e "$red[Connection failed]$reset exit: $1"
    exit $1
  fi  
}

function check_scan {
  if [ $? != 0 ];then
    echo -e "$red[Scan failed]"
    exit 1
  else
    echo -e "$green[Scan complete]"
    exit 0
  fi
}

function put_interface_up {
  ip link set $iface up >/dev/null 2>&1
}

function associate_with_essid {
  iwconfig $iface essid $essid >/dev/null 2>&1
}

function start_dhcp {
  dhcpcd -n -t10 -q $iface >/dev/null 2>&1
}

function kill_dhcpd {
  pkill -9 dhcpcd >/dev/null 2>&1
  rm /run/dhcpcd-$iface.pid >/dev/null 2>&1  
}

function check_connection {
  ping -c1 www.google.com >/dev/null 2>&1
  if [ $? == 0 ];then
    echo -e "$green[Connected to $essid]"
    exit 0
  else
    echo -e "$red[Connection failed]$reset exit: $no_connection"
    exit $no_connection
  fi
}

#==========
# Scanning
#==========
function scan {
  ip l s $iface up >/dev/null 2>&1
  iwlist $iface scan | grep --color ESSID | tr -d [:blank:] 
}

#====================
# Configuration file
#====================
function check_config {
  if [ -f $wi_conf ]; then
    . $wi_conf
  else 
    mkdir -p $wi_home
    touch $wi_conf
  fi
}

#===========
# Execution
#===========
ensure_arguments
ensure_root
check_config
echo -e "[Resetting environment]"
put_interface_down
check_exit $cannot_put_interface_down
kill_dhcpd
sleep 1
echo -e "[Associating with $essid]"
associate_with_essid
check_exit $cannot_associate_with_essid
sleep 1
echo -e "[Putting $iface up]"
put_interface_up
check_exit $cannot_put_interface_up
sleep 1
echo -e "[Starting dhcp]"
sleep 1
start_dhcp
check_connection

#==========================================
#//TODO Endless connectivity testing loop?
#==========================================
